                            each item in menu
                                li.menu-top__item
                                    a(href=`${item.link}`).menu-top__link= item.name
            .header__lang
                .lang
                    ul.lang__list
                        li.lang__item.active
                            a(href="ru/") RU
                        li.lang__item
                            a(href="en/") EN
