        .header__wrapper
            .header__logo
                a(href="/")
                    img(src="static/images/common/logo-dark.svg")
            .header__menu
                .hamburger
                    .hamburger__line
                nav.menu-top
                    .menu-top__wrapper
                        ul.menu-top__list
