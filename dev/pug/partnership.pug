extends layout/minor

block variables
	-var title = 'Сотрудничество'

block content
	.partnership
		section.company-section
			.company
				.container
					h2.title Сотрудничество
					p.subtitle.subtitle--970 БТЗ постоянно работает над повышением эффективности процессов в закупках. Мы будем рады получить обратную связь от наших контрагентов с предложениями по улучшению процессов и повышению их прозрачности. Для отправки предложений, пожалуйста, воспользуйтесь Формой Обратной Связи.

		section.info-section
			.container
				.grid
					.grid__list.grid__list-3
						.grid__column.grid__name
							h2.grid__title
								span Приглашаем поставщиков принять участие<br>
								span.blue в совместной проработке идей
						.grid__column.grid__pic
							.grid__picture
								img(src="static/images/content/new-2.png")
						.grid__column.grid__desc
							p БТЗ готов рассмотреть и совместно реализовать Ваши идеи, направленные на повышение общих показателей функционирования, снижение издержек цепи поставок, повышение качества и инновационного потенциала.

		section.feedback-section
			.feedback
				.feedback__wrapper
					h3.feedback__title Связаться с нами
					.feedback__desc Оставьте заявку и наш менеджер свяжется с вами для обсуждения вашего проекта
					form.feedback__form
						label.feedback__label
							input(placeholder="Ваше имя" type="text" name="name")
						label.feedback__label
							input(placeholder="Телефон" type="text" name="phone")
						label.feedback__label
							input(placeholder="Почта" type="text" name="mail")
						.feedback__submit-block
							input.feedback__submit(type="submit" value="Оставить заявку")
							p.feedback__small-text Отправляя данную форму, вы соглашаетесь с <a href="confidential.html">политикой обработки персональных данных</a>




		
				
					

			
